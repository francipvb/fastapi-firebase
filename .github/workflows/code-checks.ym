name: Code checks
on:
  pull_request:
    branches:
      - develop
      - main
      - release/**
  push:
    branches_exclude:
      - develop
      - main

jobs:
  pre_commit:
    name: Pre-commit
    runs-on: ubuntu-20.04
    steps:
      - uses: actions/checkout@v2
      - uses: actions/setup-python@v2.3.1
        with:
          python_version: 3.9

      - run: "pip install pre-commit"
      - run: "pre-commit install"
      - run: "pre-commit run"
